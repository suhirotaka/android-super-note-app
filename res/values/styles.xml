<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--  table styles -->
    <style name="TableContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:divider">?android:attr/dividerHorizontal</item>
        <item name="android:showDividers">middle</item>
    </style>
    <style name="TableRowContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
    </style>
    <style name="TableTitleTextContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="TableTitleText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TableItemTextContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="TableItemText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TableInputTextContainer">
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="TableInputText" parent="@android:style/Widget.EditText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">textMultiLine</item>
    </style>
    <style name="TableItemButtonsContainer">
        <item name="android:layout_width">306dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:translationX">366dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:background">@color/background_operation_button</item>
    </style>
    <style name="TableInputButtonsContainer">
        <item name="android:layout_width">146dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:background">@color/background_operation_button</item>
    </style>
    <style name="TableOperationButton" parent="@android:style/Widget.CompoundButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--  list styles -->
    <style name="ListItemText" parent="@android:style/TextAppearance.Medium">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--  button styles -->
    <style name="SimpleButton" parent="@android:style/Widget.CompoundButton">
        <item name="android:gravity">center</item>
    </style>

    <!--  other styles -->
    <style name="PageContainer">
        <item name="android:padding">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">hideSoftKeyboard</item>
    </style>
    <style name="PageTitleText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">23sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
